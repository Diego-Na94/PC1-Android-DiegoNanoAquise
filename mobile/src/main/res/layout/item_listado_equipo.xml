<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/tviNombre_Equipo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"
        android:textSize="20dp"/>

    <ImageView
        android:src="@drawable/futbol_icon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/tviNombre_Equipo"
        android:layout_centerHorizontal="true"
        android:id="@+id/futbolTeamIcon"
         />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/futbolTeamIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="left"
            android:id="@+id/tviAgregar"
            android:src="@drawable/signs"
            android:padding="5dp"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:id="@+id/tviEquipo"
            android:src="@drawable/group"
            android:padding="5dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="right"
            android:src="@drawable/multimedia"
            android:padding="5dp"/>


    </LinearLayout>

</RelativeLayout>